@model Passenger.Models.TripModel

@{
    ViewData["Title"] = "Create";
}

<h4>Create Your Trip!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="trip_destination" class="control-label"></label>
                <input asp-for="trip_destination" class="form-control" />
                <span asp-validation-for="trip_destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="trip_pickup_location" class="control-label"></label>
                <input asp-for="trip_pickup_location" class="form-control" />
                <span asp-validation-for="trip_pickup_location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="trip_start_time" class="control-label"></label>
                <input asp-for="trip_start_time" class="form-control" />
                <span asp-validation-for="trip_start_time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="trip_end_time" class="control-label"></label>
                <input asp-for="trip_end_time" class="form-control" />
                <span asp-validation-for="trip_end_time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="trip_date" class="control-label"></label>
                <input asp-for="trip_date" class="form-control" />
                <span asp-validation-for="trip_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="trip_availability" class="control-label">Number of Seats</label>
                <input asp-for="trip_availability" class="form-control" />
                <span asp-validation-for="trip_availability" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="payment_method" class="control-label"></label>
                <input asp-for="payment_method" class="form-control" />
                <span asp-validation-for="payment_method" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user_id" class="control-label"></label>
                <input asp-for="user_id" class="form-control" />
                <span asp-validation-for="user_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
